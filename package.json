{
  "name": "islegalcannabis-root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.3"
  },
  "scripts": {
    "where": "node -e \"console.log('WHERE_OK=1')\"",
    "guard:ssr": "bash tools/guard-ssr.sh",
    "audit": "bash tools/tree-audit.sh",
    "web:dev": "bash Tools/ui_dev_guard.sh",
    "web:build": "npm -w apps/web run build",
    "dev": "npm run web:dev",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "test": "npm -w apps/web run test",
    "validate:laws": "node tools/validate-laws.js",
    "validate:iso3166": "node tools/validate-iso3166.js",
    "coverage": "node tools/coverage-report.js",
    "smoke:mock": "node tools/smoke/run_smoke.mjs --mode=mock",
    "smoke:live": "node tools/smoke/run_smoke.mjs --mode=live",
    "gen:iso3166": "node tools/iso3166/generate-iso3166-1.js",
    "sync:catalog": "node tools/iso3166/import-iso3166.js",
    "refresh:laws": "node tools/refresh-laws.js",
    "wiki:ingest": "node tools/wiki/wiki_ingest.mjs",
    "wiki:refresh": "node tools/wiki/wiki_refresh.mjs --all",
    "wiki:official_eval": "node tools/wiki/wiki_official_eval.mjs",
    "allowlist:merge": "node tools/sources/merge_official_allowlist.mjs",
    "ci": "bash tools/ci-local.sh"
  }
}
